{
    "compilerOptions": {
        "target": "es2020",
        "lib": ["es2020"],
        "module": "preserve",
        "moduleResolution": "bundler",
        "sourceMap": true,
        "strict": true,
        "outDir": "out",
        "rootDir": "src",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", ".vscode-test"]
}
