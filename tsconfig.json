{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es2020",
        "lib": [
            "es2020"
        ],
        "outDir": "out",
        "rootDir": "src",
        "sourceMap": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "skipLibCheck": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ],
    "references": [
        {
            "path": "./client"
        },
        {
            "path": "./server"
        }
    ],
    "ts-node": {
        "swc": true,
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
