{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Shared lib dev build (watch)",
            "type": "shell",
            "command": "pnpm --silent --filter @vscode-adblock-syntax/shared build --watch",
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "dedicated",
                "reveal": "never",
                "close": true
            },
            "problemMatcher": "$tsc-watch",
        },
        {
            "label": "Server dev build (watch)",
            "type": "shell",
            "command": "pnpm --silent --filter @vscode-adblock-syntax/server build --watch",
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "dedicated",
                "reveal": "never",
                "close": true
            },
            "problemMatcher": "$esbuild-watch",
            "dependsOn": [
                "Shared lib dev build (watch)"
            ],
        },
        {
            "label": "Client dev build (watch)",
            "type": "shell",
            "command": "pnpm --silent --filter @vscode-adblock-syntax/client build --watch",
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "dedicated",
                "reveal": "never",
                "close": true
            },
            "problemMatcher": "$esbuild-watch",
            "dependsOn": [
                "Shared lib dev build (watch)"
            ],
        },
        {
            "label": "Grammar dev build (watch)",
            "type": "shell",
            "command": "pnpm --silent --filter @vscode-adblock-syntax/syntaxes build --watch",
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "dedicated",
                "reveal": "never",
                "close": true
            },
            // Custom problem matcher for the grammar builder
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/syntaxes"
                ],
                "pattern": {
                    "regexp": "^\\[(warning|error)\\] ([^:]+):(\\d+):(\\d+): (.*$)",
                    "file": 2,
                    "line": 3,
                    "column": 4,
                    "severity": 1,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "\\[grammar\\] build started"
                    },
                    "endsPattern": {
                        "regexp": "\\[grammar\\] build finished"
                    }
                }
            }
        },
        {
            "label": "Extension dev build (watch)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Grammar dev build (watch)",
                "Server dev build (watch)",
                "Client dev build (watch)"
            ],
        },
        // Terminate watch tasks after debugging
        // https://github.com/microsoft/vscode/issues/90786#issuecomment-587415345
        {
            "label": "Terminate All Tasks",
            "command": "echo ${input:terminateAllTasks}",
            "type": "shell",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "terminateAllTasks",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "terminateAll"
        }
    ]
}
